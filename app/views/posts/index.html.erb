<h1>投稿一覧</h1>
<table>
  <tr>
    <div class="bird"></div>
    <div class="bird -type_2"></div>
    <div class="bird -type_3"></div>
  </tr>
<%= link_to '投稿画面へ', new_post_path %>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '投稿確認', post_path(post.id) %></td>
    <td><%= link_to "編集", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' }  %></td>
    <td><%= link_to '削除', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
